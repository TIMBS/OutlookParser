@{
    Layout = "Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>File Upload</h1>
</div>

@if(Model.Posted != null && Model.Posted.Count > 0){
    <p>You have uploaded the following files:</p>
    <ul>
        @foreach (var fileDetail in Model.Posted)
        {
            <li>@fileDetail</li>
        }
    </ul>
}

<form action='@Url.Content("~/FileUpload")' method="post" enctype="multipart/form-data">
    <input type="file" name="file[]" multiple>
    <input type="submit">
</form>
